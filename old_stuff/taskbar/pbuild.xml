<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>
    <pinclude file="${toplevel}/config/targets.xml" targets="clean,prepare,all"/>

    <array name="files">
        <item>taskbar.c</item>
        <item>window_list.c</item>
        <item>menu.c</item>
        <item>plugin/datetime/datetime.c</item>
        <item>plugin/cpuload/cpuload.c</item>
        <item>plugin/memoryusage/memoryusage.c</item>
    </array>

    <array name="images">
        <item>start.png</item>
        <item>unknown.png</item>
    </array>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling taskbar application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/gui/taskbar/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flags>-c -O2 -Wall</flags>
            </gcc>
        </for>

        <echo/>
        <echo>Linking taskbar application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/gui/taskbar/objs/taskbar</echo>

        <gcc>
            <input>objs/*.o</input>
            <output>objs/taskbar</output>
            <flags>-lygui -lyutil</flags>
        </gcc>
    </target>

    <target name="install">
        <mkdir>${imagedir}/application/taskbar</mkdir>
        <copy from="objs/taskbar" to="${imagedir}/application/taskbar/taskbar"/>

        <mkdir>${imagedir}/application/taskbar/images</mkdir>
        <for var="i" array="${images}">
            <copy from="images/${i}" to="${imagedir}/application/taskbar/images/${i}"/>
        </for>
    </target>
</build>
