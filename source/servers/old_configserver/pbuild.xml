<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>
    <pinclude file="${toplevel}/config/targets.xml"
    targets="clean,prepare,all"/>

    <array name="files">
        <item>src/configserver.c</item>
        <item>src/node.c</item>
        <item>src/attribute.c</item>
        <item>src/binaryloader.c</item>
    </array>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling configserver application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/servers/configserver/${i}</echo>
            <gcc profile="y-app-compile">
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>./include</include>
            </gcc>
        </for>

        <echo/>
        <echo>Linking configserver application</echo>
        <echo/>
        <echo>[GCC    ] source/servers/configserver/objs/configserver</echo>

        <gcc>
            <input>objs/*.o</input>
            <output>objs/configserver</output>
            <flag>-lyutil</flag>
        </gcc>
    </target>

    <target name="install">
        <echo>Installing configserver</echo>
        <copy from="objs/configserver" to="${imagedir}/system/server/configserver"/>
    </target>
</build>
