<build default="all">
    <array name="files">
        <item>md5sum.c</item>
        <item>md5.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo/>
        <echo>Compiling md5sum shell command</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/shelltools/md5sum/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-Wall</flag>
            </gcc>
        </for>

        <echo/>
        <echo>Linking makedir md5sum command</echo>
        <echo/>
        <echo>[GCC    ] source/applications/shelltools/md5sum/objs/md5sum</echo>

        <gcc>
            <input>objs/*.o</input>
            <output>objs/md5sum</output>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/md5sum" to="../../../../build/image/application/md5sum"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
