<build>
    <array name="subdirs">
        <item>init</item>
        <item>shelltools</item>
        <item>listpci</item>
        <item>ifconfig</item>
        <item>systeminfo</item>
        <!--<item>irc_client</item>-->
        <!--<item>startgui</item>-->
        <item>taskbar</item>
        <item>desktop</item>
        <item>terminal</item>
        <item>texteditor</item>
        <item>dhcpclient</item>
        <item>yguictrl</item>
    </array>

    <array name="subdirs_for_installer">
        <item>fstools</item>
        <item>installer</item>
    </array>

    <target name="all">
        <for var="i" array="${subdirs}">
            <call target="all" directory="${i}"/>
        </for>
    </target>

    <target name="all-installer">
        <for var="i" array="${subdirs_for_installer}">
            <call target="all" directory="${i}"/>
        </for>
    </target>

    <target name="clean">
        <for var="i" array="${subdirs}">
            <call target="clean" directory="${i}"/>
        </for>
    </target>
</build>
