<build default="all">
    <array name="files">
        <item>main.c</item>
        <item>core/eventmanager.c</item>
        <item>ui/ui.c</item>
        <item>ui/view.c</item>
        <item>ui/server_view.c</item>
        <item>ui/channel_view.c</item>
        <item>network/irc.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling irc_client application</echo>
        <echo></echo>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/irc_client/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>../../include</include>
                <include>../../../build/crosscompiler/lib/gcc/i686-pc-yaosp/4.3.3/include</include>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-m32</flag>
                <flag>-Wall</flag>
                <flag>-nostdinc</flag>
                <flag>-nostdlib</flag>
                <flag>-fno-builtin</flag>
            </gcc>
        </for>

        <echo></echo>
        <echo>Linking init application</echo>
        <echo></echo>
        <echo>[GCC    ] source/applications/irc_client/objs/irc_client</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>../../lib/start/objs/libstart.a</input>
            <input>../../lib/yutil/objs/libyutil.a</input>
            <input>../../thirdparty/ncurses-5.7/ncurses-5.7/objs/libncurses.a</input>
            <input>../../lib/c/objs/libc.a</input>
            <output>objs/irc_client</output>
            <flag>-m32</flag>
            <flag>-Xlinker</flag>
            <flag>--script=../../../scripts/i386_app.lnk</flag>
            <flag>-nostartfiles</flag>
            <flag>-nodefaultlibs</flag>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/irc_client" to="../../../build/image/application/irc_client"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
