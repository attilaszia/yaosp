<build>
    <array name="subdirs">
        <item>terminal</item>
        <item>texteditor</item>
        <item>desktop</item>
        <item>taskbar</item>
        <item>iview</item>
        <item>shutdown</item>
    </array>

    <target name="all">
        <for var="i" array="${subdirs}">
            <call target="all" directory="${i}"/>
        </for>
    </target>

    <target name="clean">
        <for var="i" array="${subdirs}">
            <call target="clean" directory="${i}"/>
        </for>
    </target>
</build>
