<build default="all">
    <array name="files">
        <item>main.c</item>
        <item>terminal.c</item>
        <item>term_widget.c</item>
        <item>buffer.c</item>
        <item>history.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling terminal application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/gui/terminal/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-Wall</flag>
            </gcc>
        </for>

        <echo/>
        <echo>Linking terminal application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/gui/terminal/objs/terminal</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>../../../../build/libs/libygui.a</input>
            <input>../../../../build/libs/libpng.a</input>
            <input>../../../../build/libs/libjpeg.a</input>
            <input>../../../../build/libs/libz.a</input>
            <input>../../../../build/libs/libyutil.a</input>
            <output>objs/terminal</output>
        </gcc>
    </target>

    <target name="install">
        <mkdir>../../../../build/image/application/terminal</mkdir>
        <mkdir>../../../../build/image/application/terminal/images</mkdir>

        <copy from="objs/terminal" to="../../../../build/image/application/terminal/terminal"/>
        <copy from="images/terminal_16x16.png" to="../../../../build/image/application/terminal/images/terminal_16x16.png"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
