<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>
    <pinclude file="${toplevel}/config/targets.xml" targets="clean,prepare,all"/>

    <array name="files">
        <item>iview.c</item>
        <item>ui.c</item>
        <item>ui-event.c</item>
        <item>ui-about.c</item>
        <item>worker.c</item>
        <item>util.c</item>
    </array>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling ivivew application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/gui/iview/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flags>-c -O2 -Wall</flags>
            </gcc>
        </for>

        <echo/>
        <echo>Linking iview application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/gui/iview/objs/iview</echo>

        <gcc>
            <input>objs/*.o</input>
            <output>objs/iview</output>
            <flags>-lygui -lyutil</flags>
        </gcc>
    </target>

    <target name="install">
        <mkdir>${imagedir}/application/iview</mkdir>
        <copy from="objs/iview" to="${imagedir}/application/iview/iview"/>

        <mkdir>${imagedir}/application/iview/images</mkdir>
        <copy from="images/iview_16x16.png" to="${imagedir}/application/iview/images/iview_16x16.png"/>
    </target>
</build>
