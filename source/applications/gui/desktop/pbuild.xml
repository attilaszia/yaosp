<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>
    <pinclude file="${toplevel}/config/targets.xml" targets="clean,prepare,all"/>

    <array name="files">
        <item>main.cpp</item>
        <item>desktop.cpp</item>
    </array>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling desktop</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/gui/desktop/${i}</echo>
            <gcc profile="y-app-compile">
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
            </gcc>
        </for>

        <echo/>
        <echo>Linking desktop</echo>
        <echo/>
        <echo>[GCC    ] source/applications/gui/desktop/objs/desktop</echo>

        <gcc use_gpp="yes" profile="y-gui-app-link">
            <input>objs/*.o</input>
            <output>objs/desktop</output>
            <flag>-lyconfig++</flag>
        </gcc>
    </target>

    <target name="install">
        <mkdir>${imagedir}/application/desktop</mkdir>
        <copy from="objs/desktop" to="${imagedir}/application/desktop/desktop"/>
    </target>
</build>
