<build default="all">
    <array name="files">
        <item>desktop.c</item>
        <item>wallpaper.c</item>
    </array>

    <array name="images">
        <item>tunnel.jpg</item>
        <item>magneticfield.jpg</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling desktop application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/gui/desktop/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-Wall</flag>
            </gcc>
        </for>

        <echo/>
        <echo>Linking desktop application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/gui/desktop/objs/desktop</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>../../../../build/libs/libygui.a</input>
            <input>../../../../build/libs/libpng.a</input>
            <input>../../../../build/libs/libjpeg.a</input>
            <input>../../../../build/libs/libz.a</input>
            <input>../../../../build/libs/libyconfig.a</input>
            <input>../../../../build/libs/libyutil.a</input>
            <output>objs/desktop</output>
        </gcc>
    </target>

    <target name="install">
        <mkdir>../../../../build/image/application/desktop</mkdir>
        <copy from="objs/desktop" to="../../../../build/image/application/desktop/desktop"/>

        <mkdir>../../../../build/image/system/images/backgrounds</mkdir>
        <for var="i" array="${images}">
            <copy from="images/${i}" to="../../../../build/image/system/images/backgrounds/${i}"/>
        </for>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
