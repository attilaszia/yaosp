<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>

    <array name="files">
        <item>main.c</item>
        <item>core/eventmanager.c</item>
        <item>ui/ui.c</item>
        <item>ui/view.c</item>
        <item>ui/server_view.c</item>
        <item>ui/channel_view.c</item>
        <item>network/irc.c</item>
        <item>network/chan.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling irc_client application</echo>
        <echo></echo>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/network/irc_client/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-Wall</flag>
            </gcc>
        </for>

        <echo/>
        <echo>Linking init application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/network/irc_client/objs/irc_client</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>${staticlibdir}/libncurses.a</input>
            <output>objs/irc_client</output>
            <flag>-lyutil</flag>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/irc_client" to="${imagedir}/application/irc_client"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
