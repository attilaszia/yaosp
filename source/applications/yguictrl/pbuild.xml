<build default="all">
    <array name="files">
        <item>yguictrl.c</item>
        <item>screen.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling yguictrl application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/yguictrl/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-Wall</flag>
            </gcc>
        </for>

        <echo/>
        <echo>Linking yguictrl application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/yguictrl/objs/yguictrl</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>../../lib/ygui/objs/libygui.a</input>
            <input>../../lib/yutil/objs/libyutil.a</input>
            <output>objs/yguictrl</output>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/yguictrl" to="../../../build/image/application/yguictrl"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
