<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>
    <pinclude file="${toplevel}/config/targets.xml" targets="clean,prepare,all"/>

    <array name="files">
        <item>init.c</item>
    </array>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling init application</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/system/init/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <flags>-c -O2 -Wall</flags>
            </gcc>
        </for>

        <echo/>
        <echo>Linking init application</echo>
        <echo/>
        <echo>[GCC    ] source/applications/system/init/objs/init</echo>

        <gcc>
            <input>objs/*.o</input>
            <output>objs/init</output>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/init" to="${imagedir}/system/init"/>
    </target>
</build>
