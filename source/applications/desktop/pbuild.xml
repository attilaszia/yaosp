<build default="all">
    <array name="files">
        <item>desktop.c</item>
    </array>

    <array name="images">
        <item>background.png</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling desktop application</echo>
        <echo></echo>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/applications/desktop/${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>../../include</include>
                <include>../../../build/crosscompiler/lib/gcc/i686-pc-yaosp/4.3.3/include</include>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-m32</flag>
                <flag>-Wall</flag>
                <flag>-nostdinc</flag>
                <flag>-nostdlib</flag>
                <flag>-fno-builtin</flag>
            </gcc>
        </for>

        <echo></echo>
        <echo>Linking desktop application</echo>
        <echo></echo>
        <echo>[GCC    ] source/applications/desktop/objs/desktop</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>../../lib/start/objs/libstart.a</input>
            <input>../../lib/ygui/objs/libygui.a</input>
            <input>../../thirdparty/libpng-1.2.41/libpng-1.2.41/objs/libpng.a</input>
            <input>../../thirdparty/zlib-1.2.3/zlib-1.2.3/objs/libz.a</input>
            <input>../../lib/yutil/objs/libyutil.a</input>
            <input>../../lib/c/objs/libc.a</input>
            <output>objs/desktop</output>
            <flag>-m32</flag>
            <flag>-Xlinker</flag>
            <flag>--script=../../../scripts/i386_app.lnk</flag>
            <flag>-nostartfiles</flag>
            <flag>-nodefaultlibs</flag>
        </gcc>
    </target>

    <target name="install">
        <mkdir>../../../build/image/application/desktop</mkdir>
        <mkdir>../../../build/image/application/desktop/images</mkdir>

        <copy from="objs/desktop" to="../../../build/image/application/desktop/desktop"/>

        <for var="i" array="${images}">
            <copy from="images/${i}" to="../../../build/image/application/desktop/images/${i}"/>
        </for>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
