<build default="all">
    <array name="files">
        <item>mount.c</item>
    </array>

    <target name="clean">
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling mount shell command</echo>

        <for var="i" array="${files}">
            <echo>-> ${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>../../../../include</include>
                <flag>-c</flag>
                <flag>-O2</flag>
                <flag>-m32</flag>
                <flag>-Wall</flag>
                <flag>-nostdinc</flag>
                <flag>-nostdlib</flag>
                <flag>-fno-builtin</flag>
            </gcc>
        </for>

        <echo>Linking mount shell command</echo>
        <echo>-> objs/mount</echo>

        <gcc>
            <input>objs/*.o</input>
            <input>../../../../lib/start/objs/libstart.a</input>
            <input>../../../../lib/c/objs/libc.a</input>
            <output>objs/mount</output>
            <flag>-m32</flag>
            <flag>-Xlinker</flag>
            <flag>--script=../../../../../scripts/i386_app.lnk</flag>
            <flag>-nostartfiles</flag>
            <flag>-nodefaultlibs</flag>
        </gcc>
    </target>

    <target name="install">
        <copy from="objs/mount" to="../../../../../build/application/mount"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
