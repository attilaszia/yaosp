<build default="compile">
    <array name="arch_files">
        <item>arch/i386/src/boot.S</item>
        <item>arch/i386/src/start.c</item>
    </array>

    <array name="files">
    </array>

    <target name="clean">
        <delete>objs/arch/*</delete>
        <rmdir>objs/arch</rmdir>
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
        <delete>include/arch</delete>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
        <mkdir>objs/arch</mkdir>
        <symlink from="../arch/i386/include" to="include/arch"/>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo>Compiling architecture specific files</echo>

        <for var="i" array="${arch_files}">
            <echo>-> ${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/arch/filename(${i}).o</output>
                <include>./include</include>
                <flag>-c</flag>
                <flag>-m32</flag>
            </gcc>
        </for>

        <echo>Compiling architecture independent files</echo>

        <for var="i" array="${files}">
            <echo>-> ${i}</echo>
            <gcc>
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
                <include>./include</include>
                <flag>-c</flag>
                <flag>-m32</flag>
            </gcc>
        </for>

        <echo>Linking kernel binary</echo>
        <echo>-> objs/kernel</echo>

        <ld>
            <input>objs/*.o</input>
            <input>objs/arch/*.o</input>
            <output>objs/kernel</output>
            <linkerscript>arch/i386/linker.ld</linkerscript>
        </ld>
    </target>

    <target name="install">
        <copy from="objs/kernel" to="../../build/system/kernel"/>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
