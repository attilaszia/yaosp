<build default="test">
    <target name="test_string">
        <gcc>
            <input>tst_string.c</input>
            <input>../objs/libyutil.a</input>
            <output>tst_string</output>
            <flag>-O2</flag>
            <flag>-m32</flag>
            <flag>-Wall</flag>
        </gcc>

        <exec executable="./tst_string"/>
    </target>

    <target name="test_list">
        <gcc>
            <input>tst_list.c</input>
            <input>../objs/libyutil.a</input>
            <output>tst_list</output>
            <flag>-O2</flag>
            <flag>-m32</flag>
            <flag>-Wall</flag>
        </gcc>

        <exec executable="./tst_list"/>
    </target>

