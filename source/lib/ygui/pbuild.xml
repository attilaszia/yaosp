<build default="all">
    <pinclude file="${toplevel}/config/paths.xml"/>

    <array name="files">
        <item>src/application.c</item>
        <item>src/window.c</item>
        <item>src/widget.c</item>
        <item>src/panel.c</item>
        <item>src/label.c</item>
        <item>src/font.c</item>
        <item>src/button.c</item>
        <item>src/textfield.c</item>
        <item>src/desktop.c</item>
        <item>src/scrollpanel.c</item>
        <item>src/gc.c</item>
        <item>src/bitmap.c</item>
        <item>src/bitmap_resize.c</item>
        <item>src/image.c</item>
        <item>src/menu.c</item>
        <item>src/menuitem.c</item>
        <item>src/menubar.c</item>
        <item>src/textarea.c</item>
        <item>src/dirview.c</item>
        <item>src/region.c</item>
        <item>src/layout/layout.c</item>
        <item>src/layout/borderlayout.c</item>
        <item>src/layout/flowlayout.c</item>
        <item>src/render/render.c</item>
        <item>src/image/imageloader.c</item>
        <!--item>src/image/png.c</item>
        <item>src/image/jpeg.c</item-->
        <item>src/dialog/filechooser.c</item>
        <item>src/border/border.c</item>
        <item>src/border/lineborder.c</item>
        <item>src/border/emptyborder.c</item>
    </array>

    <array name="images">
        <item>folder.png</item>
        <item>file.png</item>
    </array>

    <target name="clean">
        <delete>objs/image/*</delete>
        <rmdir>objs/image</rmdir>
        <delete>objs/*</delete>
        <rmdir>objs</rmdir>
    </target>

    <target name="prepare" type="private">
        <mkdir>objs</mkdir>
        <mkdir>objs/image</mkdir>
    </target>

    <target name="compile">
        <call target="prepare"/>

        <echo/>
        <echo>Compiling ygui library</echo>
        <echo/>

        <for var="i" array="${files}">
            <echo>[GCC    ] source/lib/ygui/${i}</echo>
            <gcc profile="y-lib-compile">
                <input>${i}</input>
                <output>objs/filename(${i}).o</output>
            </gcc>
        </for>

        <gcc profile="y-lib-compile">
            <input>src/image/png.c</input>
            <output>objs/image/png.o</output>
        </gcc>

        <gcc profile="y-lib-compile">
            <input>src/image/jpeg.c</input>
            <output>objs/image/jpeg.o</output>
        </gcc>

        <echo/>
        <echo>Linking ygui library</echo>
        <echo/>
        <echo>[LD     ] source/lib/ygui/objs/libygui.so</echo>

        <ld>
            <flag>-shared</flag>
            <input>objs/*.o</input>
            <output>objs/libygui.so</output>
        </ld>

        <ld>
            <flag>-shared</flag>
            <input>objs/image/png.o</input>
            <input>${staticlibdir}/libpng.a</input>
            <input>${staticlibdir}/libz.a</input>
            <output>objs/png.so</output>
        </ld>

        <ld>
            <flag>-shared</flag>
            <input>objs/image/jpeg.o</input>
            <input>${staticlibdir}/libjpeg.a</input>
            <input>${staticlibdir}/libz.a</input>
            <output>objs/jpeg.so</output>
        </ld>
    </target>

    <target name="install">
        <copy from="objs/libygui.so" to="${sharedlibdir}"/>
        <copy from="objs/libygui.so" to="${imagedir}/system/lib"/>
        <copy from="objs/png.so" to="${imagedir}/system/lib/imageloader"/>
        <copy from="objs/jpeg.so" to="${imagedir}/system/lib/imageloader"/>

        <for var="i" array="${images}">
            <copy from="images/${i}" to="${imagedir}/system/images/${i}"/>
        </for>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="compile"/>
        <call target="install"/>
    </target>
</build>
