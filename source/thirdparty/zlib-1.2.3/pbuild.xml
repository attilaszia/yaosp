<build default="all">
    <target name="clean">
        <cleandir>zlib-1.2.3</cleandir>
        <rmdir>zlib-1.2.3</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/zlib/zlib-1.2.3.tar.bz2"
                 to="zlib-1.2.3.tar.bz2"
                 md5="dee233bf288ee795ac96a98cc2e369b6"/>

        <echo>Extracting zlib source</echo>

        <exec executable="tar">
            <arg>-jxf</arg>
            <arg>zlib-1.2.3.tar.bz2</arg>
        </exec>

        <echo>Patching zlib source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>zlib-1.2.3.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="zlib-1.2.3"/>
    </target>
</build>
