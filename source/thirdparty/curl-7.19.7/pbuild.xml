<build default="all">
    <target name="clean">
        <cleandir>curl-7.19.7</cleandir>
        <rmdir>curl-7.19.7</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/curl/curl-7.19.7.tar.bz2"
                 to="curl-7.19.7.tar.bz2"
                 md5="79a8fbb2eed5464b97bdf94bee109380"/>

        <echo>Extracting curl source</echo>

        <exec executable="tar">
            <arg>-jxf</arg>
            <arg>curl-7.19.7.tar.bz2</arg>
        </exec>

        <echo>Patching curl source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>curl-7.19.7.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="curl-7.19.7"/>
    </target>
</build>
