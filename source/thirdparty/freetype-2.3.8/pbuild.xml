<build default="all">
    <target name="clean">
        <cleandir>freetype-2.3.8</cleandir>
        <rmdir>freetype-2.3.8</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://ftp.cc.uoc.gr/mirrors/nongnu.org/freetype/freetype-2.3.8.tar.bz2"
                 to="freetype-2.3.8.tar.bz2"
                 md5="6cf31a08826715a0d16ae366da9c7d3b"/>

        <echo>Extracting freetype source</echo>

        <exec executable="tar">
            <arg>-jxf</arg>
            <arg>freetype-2.3.8.tar.bz2</arg>
        </exec>

        <echo>Patching freetype source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>freetype-2.3.8.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="freetype-2.3.8"/>
    </target>
</build>
