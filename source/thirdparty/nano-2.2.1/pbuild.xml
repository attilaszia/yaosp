<build default="all">
    <target name="clean">
        <cleandir>nano-2.2.1</cleandir>
        <rmdir>nano-2.2.1</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/nano/nano-2.2.1.tar.gz"
                 to="nano-2.2.1.tar.gz"
                 md5="12eb7808ab1b8df4d20e87df22c38143"/>

        <echo>Extracting nano source</echo>

        <exec executable="tar">
            <arg>-zxf</arg>
            <arg>nano-2.2.1.tar.gz</arg>
        </exec>

        <echo>Patching nano source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>nano-2.2.1.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="nano-2.2.1"/>
    </target>
</build>
