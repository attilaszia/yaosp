<build default="all">
    <target name="clean">
        <cleandir>bzip2-1.0.5</cleandir>
        <rmdir>bzip2-1.0.5</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/bzip2/bzip2-1.0.5.tar.gz"
                 to="bzip2-1.0.5.tar.gz"
                 md5="3c15a0c8d1d3ee1c46a1634d00617b1a"/>

        <echo>Extracting bzip2 source</echo>

        <exec executable="tar">
            <arg>-zxf</arg>
            <arg>bzip2-1.0.5.tar.gz</arg>
        </exec>

        <echo>Patching bzip2 source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>bzip2-1.0.5.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="bzip2-1.0.5"/>
    </target>
</build>
