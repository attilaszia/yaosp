<build default="all">
    <target name="clean">
        <cleandir>libpng-1.2.43</cleandir>
        <rmdir>libpng-1.2.43</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/libpng/libpng-1.2.43.tar.gz"
                 to="libpng-1.2.43.tar.gz"
                 md5="00f3f6bfadbd4f83e351558ad6bb46b5"/>

        <echo>Extracting libpng source</echo>

        <exec executable="tar">
            <arg>-zxf</arg>
            <arg>libpng-1.2.43.tar.gz</arg>
        </exec>

        <echo>Patching libpng source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>libpng-1.2.43.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="libpng-1.2.43"/>
    </target>
</build>
