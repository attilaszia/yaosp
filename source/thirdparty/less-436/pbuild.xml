<build default="all">
    <target name="clean">
        <cleandir>less-436</cleandir>
        <rmdir>less-436</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/less/less-436.tar.gz"
                 to="less-436.tar.gz"
                 md5="817bf051953ad2dea825a1cdf460caa4"/>

        <echo>Extracting less source</echo>

        <exec executable="tar">
            <arg>-zxf</arg>
            <arg>less-436.tar.gz</arg>
        </exec>

        <echo>Patching less source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>less-436.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="less-436"/>
    </target>
</build>
