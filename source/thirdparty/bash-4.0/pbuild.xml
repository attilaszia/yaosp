<build default="all">
    <target name="clean">
        <cleandir>bash-4.0</cleandir>
        <rmdir>bash-4.0</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/bash/bash-4.0.tar.gz"
                 to="bash-4.0.tar.gz"
                 md5="a90a1b5a6db4838483f05438e05e8eb9"/>

        <echo>Extracting bash source</echo>

        <exec executable="tar">
            <arg>-zxf</arg>
            <arg>bash-4.0.tar.gz</arg>
        </exec>

        <echo>Patching bash source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>bash-4.0.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="bash-4.0"/>
    </target>
</build>
