<build default="all">
    <target name="clean">
        <cleandir>util-linux-ng-2.16.1</cleandir>
        <rmdir>util-linux-ng-2.16.1</rmdir>
    </target>

    <target name="get_source">
        <httpget address="http://files.yaosp.org/source/util-linux-ng/util-linux-ng-2.16.1.tar.bz2"
                 to="util-linux-ng-2.16.1.tar.bz2"
                 md5="8997a0a6ebf38159fa962a3b8d290f6e"/>

        <echo>Extracting util-linux-ng source</echo>

        <exec executable="tar">
            <arg>-jxf</arg>
            <arg>util-linux-ng-2.16.1.tar.bz2</arg>
        </exec>

        <echo>Patching util-linux-ng source</echo>

        <exec executable="patch">
            <arg>-t</arg>
            <arg>-p0</arg>
            <arg>-i</arg>
            <arg>util-linux-ng-2.16.1.patch</arg>
        </exec>
    </target>

    <target name="all">
        <call target="clean"/>
        <call target="get_source"/>
        <call target="all" directory="util-linux-ng-2.16.1"/>
    </target>
</build>
